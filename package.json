{
  "name": "error-replay-debug-adapter",
  "version": "0.1.0",
  "keywords": [
    "vscode",
    "dap",
    "debugger",
    "debug-adapter-protocol"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dankeboy36/error-replay-debug-adapter.git"
  },
  "license": "MIT",
  "author": "dankeboy36",
  "exports": {
    ".": "./packages/adapter/dist/index.js",
    "./types": "./packages/adapter/dist/types.js",
    "./package.json": "./package.json"
  },
  "main": "packages/adapter/dist/index.js",
  "types": "packages/adapter/dist/index.d.ts",
  "files": [
    "packages/adapter/dist"
  ],
  "workspaces": [
    "packages/adapter",
    "packages/mock",
    "packages/extension"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build --workspaces",
    "prebundle": "npm run build",
    "bundle": "webpack --mode production",
    "format": "prettier --write .",
    "lint": "eslint packages --ext js,jsx,ts,tsx",
    "lint:fix": "eslint packages --ext js,jsx,ts,tsx --fix",
    "prepackage": "npm run bundle",
    "package": "node scripts/packageVsix.js",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-workspaces": "^0.11.1",
    "neostandard": "^0.12.2",
    "prettier": "^3.7.4",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.20",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.4.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "vscode": "^1.101.0"
